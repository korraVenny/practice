docker
Dockerfile
----
FROM tomcat:latest
RUN rm -rf /usr/local/tomcat/webapps/ROOT
COPY target/*.war /usr/local/tomcat/webapps/ROOT.war
EXPOSE 8080
CMD ["catalina.sh", "run"]
----
FROM redis:latest
CMD ["redis-server"]
---
FROM tomcat:latest
COPY target/*.war /usr/local/tomcat/webapps/ROOT.war
CMD ["catalina.sh","run"]
-----
docker build -t my-tomcat-app .
docker run -p 8080:8080 my-tomcat-app
docker login
