docker-compose.yml

version: '3.8'

services:
  web:
    image: hospital
    container_name: hospital
    ports:
      - "7002:7002"
    depends_on:
      - db

  db:
    image: tomcat:latest
    container_name: tomcat
    ports:
      - "8082:8080"


services:
  web:
    image: udayasri310/my-maven-app:latest
    container_name: my-maven-app
    ports:
      - "8080:8080"
    depends_on:
      - db

  db:
    image: mysql:8.0
    container_name: my-database
    environment:
      MYSQL_ROOT_PASSWORD: rootpass
      MYSQL_DATABASE: mydb
      MYSQL_USER: user
      MYSQL_PASSWORD: userpass
    ports:
      - "3306:3306"
