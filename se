PIPELINE

name
pipeline 
create
pipeline {
    agent any
    tools {
        maven 'MAVEN_HOME'
    }
    stages {
        stage('git repo & clean') {
            steps {
                bat 'git clone https://github.com/udayasri310/internal2_maven_web.git'
                bat 'mvn clean -f internal2_maven_web/pom.xml'
            }
        }
        stage('install') {
            steps {
                bat 'mvn install -f internal2_maven_web/pom.xml'
            }
        }
        stage('test') {
            steps {
                bat 'mvn test -f internal2_maven_web/pom.xml'
            }
        }
        stage('package') {
            steps {
                bat 'mvn package -f internal2_maven_web/pom.xml'
            }
        }
    }
}
